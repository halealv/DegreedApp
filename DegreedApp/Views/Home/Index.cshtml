@model APIClient.FilterClass

<div class="page-header">
    Dad Jokes
</div>
<div class="form-container">
    <div class="form-inline">
        @using (Ajax.BeginForm("GetRandom", "Home", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "dvList" }))
        {
            <div class="row">
                <div class="form-group">
                    <input type="submit" value="Get Random Joke" class="btn btn-primary" />
                </div>
            </div>
        }
        <div class="divider-10" style="height: 15px"></div>
        <div class="separator"></div>
        @using (Ajax.BeginForm("GetFiltered", "Home", new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "dvList" }))
        {
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(m => m.Term)
                    @Html.TextBoxFor(m => m.Term, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Limit)
                    @Html.TextBoxFor(m => m.Limit, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Get Filtered Jokes" class="btn btn-primary" />
                </div>
            </div>
        }
        <div class="divider-10" style="height: 15px"></div>
        <div class="separator"></div>
        <div id="dvList" class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    @{Html.RenderPartial("JokeList");}
                </div>
            </div>
        </div>
    </div>
</div>
